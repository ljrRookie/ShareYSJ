<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_blue_bg"
                android:orientation="vertical"
                android:padding="10dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="请输入余额支付密码："
        android:textColor="#000000"
        android:textSize="17sp"/>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="{fa-times}"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="¥0.00"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <lsp.com.lib.PasswordInputEdt
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:autoCloseKeyBoard="true"
        app:rectChooseColor="@color/theme_color"/>

    <TextView
        android:id="@+id/btn_setting_pay_pwd"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignRight="@id/edt_password"
        android:layout_below="@id/edt_password"
        android:layout_marginBottom="10dp"
        android:text="设置支付密码"
        android:textSize="13sp"
        />

</RelativeLayout>