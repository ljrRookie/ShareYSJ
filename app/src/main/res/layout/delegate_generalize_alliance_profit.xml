<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/line"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.allen.library.SuperTextView
        android:id="@+id/tv_bouns"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:sLeftTextColor="#000000"
        app:sLeftTextSize="15sp"
        app:sLeftTextString="累计分红"
        app:sLeftViewMarginLeft="15dp"
        app:sRightTextColor="#000000"
        app:sRightTextSize="15sp"
        app:sRightTextString="+0.00"
        app:sRightViewMarginRight="15dp"
        app:sUseRipple="false"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/empty_invest"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="暂无投资明细~"
            android:textColor="#aeaeae"
            android:textSize="14sp"
            android:visibility="visible"
            />
    </RelativeLayout>

    </LinearLayout>