<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/line"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:paddingTop="15dp"
        android:paddingBottom="18dp"
        android:layout_height="wrap_content">
        <com.allen.library.SuperTextView
            android:id="@+id/tv_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sLeftIconRes="@mipmap/icon_water_a"
            app:sLeftTextColor="#474747"
            app:sDividerLineType="none"
            android:paddingLeft="5dp"
            app:sLeftViewMarginLeft="5dp"
            app:sUseRipple="false"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="饮水次数"/>
        <LinearLayout
            android:layout_below="@id/tv_flag"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_a_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/btn_blue_wither_bg"
                android:gravity="center"
                android:text="您有0次饮水次数"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <com.allen.library.SuperButton
                android:id="@+id/btn_use_a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="立即使用"
                android:textColor="#ffffff"
                android:textSize="15sp"
                app:sCornersBottomRightRadius="7dp"
                app:sCornersTopRightRadius="7dp"
                app:sGradientEndColor="@color/gray_button"
                app:sGradientOrientation="RIGHT_LEFT"
                app:sGradientStartColor="@color/gray_button"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:paddingTop="15dp"
        android:paddingBottom="18dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.allen.library.SuperTextView
            android:id="@+id/tv_flag_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sLeftIconRes="@mipmap/icon_water_b"
            app:sLeftTextColor="#474747"
            app:sDividerLineType="none"
            android:paddingLeft="5dp"
            app:sLeftViewMarginLeft="5dp"
            app:sUseRipple="false"
            app:sLeftTextSize="16sp"
            app:sLeftTextString="免费饮水次数"/>
        <LinearLayout
            android:layout_below="@id/tv_flag_b"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_b_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/btn_blue_wither_bg"
                android:gravity="center"
                android:text="您有0次饮水次数"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <com.allen.library.SuperButton

                android:id="@+id/btn_use_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="立即使用"
                android:textColor="#ffffff"
                android:textSize="15sp"
                app:sCornersBottomRightRadius="7dp"
                app:sCornersTopRightRadius="7dp"
                app:sGradientEndColor="@color/gray_button"
                app:sGradientOrientation="RIGHT_LEFT"
                app:sGradientStartColor="@color/gray_button"/>
        </LinearLayout>
    </RelativeLayout>
    <com.allen.library.SuperTextView
        android:id="@+id/tv_Chargenub"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:sLeftIconRes="@mipmap/icon_charge"
        app:sLeftTextColor="#474747"
        app:sDividerLineType="none"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        app:sLeftViewMarginLeft="5dp"
        app:sUseRipple="false"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="免费充电次数："/>
</LinearLayout>