<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/line"
              android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/statusBarSize"
    android:background="@color/theme_color"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="马上登录"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:hint="输入手机号码"
        android:textSize="16sp"
        android:paddingLeft="25dp"
        android:maxLines="1"
        android:layout_marginRight="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit_white_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_height="45dp">
    <EditText
        android:id="@+id/edit_code"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:maxLines="1"
        android:hint="输入验证码"
        android:textSize="16sp"
        android:paddingLeft="25dp"
        android:background="@drawable/edit_code_white_bg"/>
        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/theme_color"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/edit_code_blue_bg"
            android:text="发送验证码"
            android:gravity="center"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="16sp"
        android:paddingLeft="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_white_bg"/>
    <EditText
        android:id="@+id/edit_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:inputType="textPassword"
        android:hint="再次输入密码"
        android:maxLines="1"
        android:textSize="16sp"
        android:paddingLeft="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_white_bg"/>
    <EditText
        android:id="@+id/edit_invite_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:hint="输入推荐码（选填）"
        android:maxLines="1"
        android:textSize="16sp"
        android:paddingLeft="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_white_bg"/>
    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_blue_bg"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
</LinearLayout>