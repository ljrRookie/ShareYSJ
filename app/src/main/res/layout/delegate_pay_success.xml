<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@android:color/white"
                android:layout_height="match_parent">
<ImageView
    android:id="@+id/iv_pic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/icon_success_pay"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    />
    <TextView
        android:id="@+id/tv_flag"
        android:layout_below="@id/iv_pic"
        android:layout_centerHorizontal="true"
        android:text="支付成功"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_below="@id/tv_flag"
        android:layout_centerHorizontal="true"
        android:text="¥0.00"
        android:textSize="25sp"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/theme_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_below="@id/tv_price"
        android:layout_centerHorizontal="true"
        android:text="获得1次xxx饮水次数"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.allen.library.SuperButton
        android:layout_below="@id/tv_tip"
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_height="42dp"
        app:sUseSelector="true"
        android:layout_marginTop="40dp"
        app:sSolidColor="#eeeeee"
        app:sSelectorPressedColor="#dadada"
        android:text="完成"
        app:sSelectorNormalColor="#eeeeee"
        app:sCornersRadius="20dp"
        app:sStrokeWidth="1dp"
        app:sStrokeColor="#dadada"
        android:textColor="#000000"
        android:textSize="16sp"/>
</RelativeLayout>